<%- include("header.ejs") -%>

	<div class="box"  id="heading">
		<h1><%= current %> </h1>
	</div>

	<div class="box">

		<% for(var i=0;i<items.length;i++) { %>
			<div class="item">
				<input type="checkbox">
				<p> <%= items[i] %> </p>
			</div>
		<% } %>

	<form class="item"  action="/" , method="post">
		<input type="text" name="task" placeholder="New item">
		<button type="submit">+</button>
	</form>
	</div>

<%- include("footer.ejs") -%>